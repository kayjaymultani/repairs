<p id="notice"><%= notice %></p>

<h1>Rings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rings.each do |ring| %>
      <tr>
        <td><%= ring.name %></td>
        <td><%= link_to 'Show', ring %></td>
        <td><%= link_to 'Edit', edit_ring_path(ring) %></td>
        <td><%= link_to 'Destroy', ring, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ring', new_ring_path %>
